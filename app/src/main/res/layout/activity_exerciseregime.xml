<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exerciseregime">

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ssj" />

    <!-- "Ready to Go" Button -->
    <Button
        android:id="@+id/readyToGoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:text="Ready to Go" />

    <!-- NestedScrollView for Exercise Cards -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/exerciseScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/readyToGoButton">

        <!-- LinearLayout for Exercise Cards -->
        <LinearLayout
            android:id="@+id/exerciseLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Dynamically add exercise cards here -->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ViewPager for Exercise Difficulty Levels -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/exerciseScrollView" />

</RelativeLayout>

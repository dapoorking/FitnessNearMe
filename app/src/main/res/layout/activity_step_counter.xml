<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="242dp"
        android:layout_height="171dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fitness__sport__workout_logo_design___1__removebg_preview"
        android:layout_marginTop="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:src="@drawable/running" />

    </FrameLayout>

    <TextView
        android:id="@+id/totalStepCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="68dp"
        android:text="Total Steps: 0"
        android:textStyle="bold"
        android:textColor="@color/logo"
        android:outlineSpotShadowColor="@color/cardview_dark_background"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalStepCountTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/step">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/heart"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginEnd="12dp"
            android:src="@drawable/heartbeat"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/stepCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/heart"
            android:layout_marginEnd="8dp"
            android:text="Step Count: 0"
            android:layout_marginTop="10sp"
            android:textSize="20sp"

            android:textColor="@color/logo"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/newac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/step"
        android:layout_marginTop="56dp"

        android:backgroundTint="@color/cardview_dark_background"
        android:text="Start a New Activity"
        android:textColor="@color/logo" />

</RelativeLayout>

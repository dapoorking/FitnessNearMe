<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".workoutR"
        >

        <ImageView

            android:id="@+id/logoImageView"
            android:layout_width="240sp"
            android:layout_height="240sp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp"
            android:alpha="100"
            android:elevation="2dp"
            android:rotationY="360"
            android:scaleType="centerInside"
            android:src="@drawable/fitness__sport__workout_logo_design___1__removebg_preview" />

        <TextView
            android:fontFamily="@font/poppins_black"
            android:id="@+id/inv"
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:autoSizeTextType="uniform"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Exercises Avilable"
            android:textAlignment="center"
            android:layout_below="@+id/logoImageView"
            android:textColor="@color/logo" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/exerciseImageView"
            android:layout_width="wrap_content"
            android:layout_height="350sp"
            android:layout_below="@id/inv"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:contentDescription="StrightBench"

            android:src="@drawable/cable1" />
        <TextView
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/dis1"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Standing Pull"
            android:textAlignment="center"
            android:layout_below="@+id/exerciseImageView"
            android:textColor="@color/logo" />
        <Button
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Need More Help?"
            android:layout_marginTop="5sp"
            android:autoSizeTextType="uniform"
            android:layout_below="@id/dis1"
            android:backgroundTint="@color/cardview_dark_background"
            android:textColor="@color/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/inc"
            android:layout_width="wrap_content"
            android:layout_height="350sp"
            android:layout_below="@id/test"
            android:layout_marginTop="15sp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:contentDescription="StrightBench"

            android:src="@drawable/cable2" />
        <TextView
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/dis2"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:textAlignment="center"
            android:text="ReversedGrip"
            android:layout_below="@+id/inc"
            android:textColor="@color/logo" />
        <Button
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Need More Help"
            android:layout_marginTop="5sp"
            android:autoSizeTextType="uniform"
            android:layout_below="@id/dis2"
            android:backgroundTint="@color/cardview_dark_background"
            android:textColor="@color/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/dec"
            android:layout_width="wrap_content"
            android:layout_height="350sp"
            android:layout_below="@id/test2"
            android:layout_marginTop="15sp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:contentDescription="StrightBench"
            android:src="@drawable/cable3" />
        <TextView
            android:id="@+id/dis3"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="StrongMen Pose"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_below="@+id/dec"
            android:textColor="@color/logo" />
        <Button
            android:id="@+id/test3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Need More Help?"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="5sp"
            android:autoSizeTextType="uniform"
            android:layout_below="@id/dis3"
            android:backgroundTint="@color/cardview_dark_background"
            android:textColor="@color/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</ScrollView>
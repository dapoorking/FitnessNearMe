<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F6EA98">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="240sp"
        android:layout_height="240sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/fitness__sport__workout_logo_design___1__removebg_preview" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customToolbar"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="235dp"
        android:layout_marginEnd="-1sp"
        android:background="@color/cardview_dark_background"
        app:subtitleTextColor="@color/logo">

        <!-- Add a TextView to display the username -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:textColor="@color/logo"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="50sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/eventsButton"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Events"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/logo" />

        <Button
            android:id="@+id/myGymButton"
            android:layout_width="0dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="My Gym"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/logo" />

    </LinearLayout>

    <Button
        android:id="@+id/trySomethingNewButton"
        android:layout_width="229dp"
        android:layout_height="70dp"
        android:layout_below="@id/buttonLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:fontFamily="@font/poppins_bold"
        android:text="Try Something New"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/logo" />

    <TextView
        android:id="@+id/step"
        android:layout_width="162dp"
        android:layout_height="32dp"
        android:layout_below="@id/trySomethingNewButton"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="21dp"
        android:layout_marginRight="36dp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:text="GOING FOR A RUN?"
        android:fontFamily="@font/poppins_bold"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/logo" />

    <LinearLayout
        android:id="@+id/socialMediaLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="40sp"
            android:layout_height="80sp"
            android:src="@drawable/iconmonstr_facebook_messenger_2"
            android:clickable="true"
            android:onClick="onFacebookIconClicked" />

        <ImageView
            android:id="@+id/twitterIcon"
            android:layout_width="40sp"
            android:layout_height="80sp"
            android:layout_marginStart="16dp"
            android:src="@drawable/iconmonstr_twitter_4"
            android:clickable="true"
            android:onClick="onTwitterIconClicked" />


        <ImageView
            android:id="@+id/instagramIcon"
            android:layout_width="40sp"
            android:layout_height="80sp"
            android:layout_marginStart="16dp"
            android:src="@drawable/iconmonstr_instagram_14"
            android:clickable="true"
            android:onClick="onInstagramIconClicked" />


        <!-- Add more social media icons as needed -->

    </LinearLayout>



</RelativeLayout>
